.row 
  .col-md-8
    = link_to "Add Subject", new_subject_path, class: "btn btn-info"
    = link_to "Add Student", new_student_path, class: "btn btn-info"
    = link_to "Enroll Student", new_student_subject_path, class: "btn btn-success"
  .col-md-4{:style => "margin-top: 4px;"}
    = link_to "Back to Home", root_path, class: "btn btn-success"
  
%h2 List of Enrolled Students
%table.table.table-bordered
  %thead
    %tr
      %th Student Name
      %th Year
      %th Subject
      %th Actions
  %tbody
    - @studentsubjects.each do |ss|
      %tr
        %td
          = ss.student.first_name
          = ss.student.last_name
        %td= ss.student.year
        %td= ss.subject.title
        %td
          = link_to "Show", student_subject_path(ss.id), class: "btn btn-success btn-xs"
          = link_to "Edit", edit_student_subject_path(ss.id), class: "btn btn-info btn-xs"
          = link_to "Delete", student_subject_path(ss.id), data: { :confirm => "Are you sure?"}, :method => :delete, class: "btn btn-danger btn-xs"